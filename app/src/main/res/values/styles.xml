<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--        <item name="android:textColorHint">@color/color_00FFFF</item>-->
    </style>

    <style name="EditTextHint" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/color_FF0000</item> // hint正常颜色
        <item name="colorControlNormal">@color/color_00FF00</item>  // 输入框颜色
        <item name="colorControlActivated">@color/color_0000FF</item> // 获取到焦点之后输入框、hint、光标颜色
        <item name="colorControlHighlight">@color/color_FFFF00</item> // 暂无表现
    </style>

</resources>
